# MediScribe MVP Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# AI Service Configuration (for future real implementation)
OPENAI_API_KEY=your_openai_api_key
WHISPER_MODEL=base

# Database Configuration (for future implementation)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mediscribe
DB_USER=postgres
DB_PASSWORD=your_password

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# HIPAA Compliance Settings
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555  # 7 years for medical records
AUTO_DELETE_SESSIONS=true

# Integration Settings (for future EMR integration)
EMR_SYSTEM=epic
EMR_API_URL=https://your-emr-system.com/api
EMR_API_KEY=your_emr_api_key

# Demo Mode Settings
DEMO_MODE=true
SIMULATE_REAL_TIME=true
DEMO_DELAY_MS=2000 